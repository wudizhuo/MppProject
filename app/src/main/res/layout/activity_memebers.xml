<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_memebers"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mpp.project.activity.Memebers">

    <Button
        android:id="@+id/btn_add_library_members"
        style="@style/Homepage.Button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@color/color_teal"
        android:text="Library Member" />

    <Button
        android:id="@+id/btn_add_librarian"
        style="@style/Homepage.Button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_amber"
        android:text="Librarian" />
    <Button
        android:id="@+id/btn_add_admin"
        style="@style/Homepage.Button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_accent"
        android:text="Admin" />



</LinearLayout>
