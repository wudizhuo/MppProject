<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mpp.project">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.Dashboard" />
        <activity
            android:name=".activity.Book"
            android:label="Add Book" />
        <activity
            android:name=".activity.AddBook"
            android:label="Add Book" />
        <activity
            android:name=".activity.BookDetail"
            android:label="Book Detail" />
        <activity
            android:name=".activity.AddAuthor"
            android:label="Add Author" />

    </application>

</manifest>
